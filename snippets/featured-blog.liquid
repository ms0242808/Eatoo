<!-- snippets/featured-blog.liquid -->
{% if section.settings.blog_show_author or section.settings.blog_show_date %}
  <div class="featured-blog__meta">
    {% if section.settings.blog_show_author %}
      <span class="featured-blog__author">
        {{ article.author }}
      </span>
    {% endif %}
    {% if section.settings.blog_show_date %}
      <div class="featured-blog__date">
        <time datetime="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}" class="date">{{ article.published_at | date: format: 'date' }}</time>
      </div>
    {% endif %}
    <hr class="hr--small {% if section.settings.post_limit == 1 and section.settings.blog_show_image == false %}hr--middle{% else %}hr--left{% endif %}">
  </div>
{% endif %}
<h2 class="h3{% if section.settings.post_limit == 1 and section.settings.blog_show_image == false %} title--one-post{% endif %}">
  <div class="leftBorder"></div>
  <div class="rightBorder"></div>
  <a class="article__heading-link" href="{{ article.url }}">{{ article.title }}</a>
</h2>
{% if section.settings.blog_show_excerpt %}
  <div class="rte rte--indented-images">
    {{ article.excerpt_or_content | strip_html | truncatewords: 50 }}
  </div>
{% endif %}
<p>
  <a href="{{ article.url }}" class="text-link">{{ 'blogs.article.read_more' | t }} <span class="icon icon-arrow-right" aria-hidden="true"></span></a>
</p>

<style type="text/css">
  .leftBorder {
    border-bottom: 3px #D1B159 solid;
    float: left;
    width: 350px;
    margin-top: 14px;
  }

  #triangle-left {
    width: 0;
    height: 0;
    border-top: 5px solid transparent;
    border-left: 10px solid #D1B159;
    border-bottom: 5px solid transparent;
    position: absolute;
    left: 25px;
    top: -2.25px;
  }

  .rightBorder {
    border-bottom: 3px #D1B159 solid;
    float: right;
    width: 350px;
    margin-top: 14px;
  }
  
  #triangle-right {
    width: 0;
    height: 0;
    border-top: 5px solid transparent;
    border-right: 10px solid #D1B159;
    border-bottom: 5px solid transparent;
    position: absolute;
    right: -5px;
    top: -2.25px;
  }

  @media screen and (max-width: 768px) {
    .leftBorder {
      width: 50px;
    }

    .rightBorder {
      width: 50px;
    }
  }
</style>