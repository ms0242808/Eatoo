    margin: 0px 2px -3px 0px !important;
    cursor: pointer;
  }

  .fdetails {
    padding-left: 5px;
    padding-right: 30px;
    cursor: pointer;
  }
  
  .mbr {
    display: none;
  }

  .details {
    padding-left: 5px;
  }
  
  .fa.fa-instagram, .fab.fa-facebook,.fab .fa-twitter{
