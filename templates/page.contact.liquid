<img src="https://cdn.shopify.com/s/files/1/0093/0306/4631/files/Contact_101cc4cd-c261-4ff9-a328-542523695492.jpg?v=1578990578" alt="contact us" title="Contact Us | Eatoo UK" />
<!-- /templates/page.contact.liquid -->
<div class="grid">

  <div class="grid__item large--five-sixths push--large--one-twelfth">

    <header class="section-header text-center" style="margin-bottom: 0px;">
      <h2 style="font-size: 2em;"><b>{{ page.title }}</b></h2>
      <hr class="hr--small">
    </header>

    <div class="grid grid--small">
      <div class="grid__item large--one-half">
        <div class="rte rte--nomargin rte--indented-images">
          <a class="Cicon" style="all:unset"><span style="font-size: 18px;"><i class="far fa-clock"></i></span><span class="details">Customer service hour: Mon - Sat, 10.00 a.m - 08.00 p.m</span></a>
          <br>
          <a class="Cicon" style="all:unset"><span style="font-size: 18px;"><i class="far fa-envelope"></i></span><span class="details">contact@eatoo.co.uk</span></a>
          <br>
          <a class="Cicon" style="all:unset"><span style="font-size: 18px;"><i class="fab fa-whatsapp"></i></span><span class="details">07729926273</span></a>
          <br>
          <a class="Cicon" style="all:unset"><span style="font-size: 18px;"><i class="fas fa-phone"></i></span><span class="details">07729926273</span></a>
          <br>
          <a class="Cicon" style="all:unset"><span style="font-size: 18px;"><i class="fab fa-weixin"></i></span><span class="details">eatoouk01 & eatoouk02 & eatoouk03 </span></a>
          <br>
          <a class="Cicon" style="all:unset"><span style="font-size: 18px;"><i class="fas fa-map-marker-alt"></i></span><span class="details">Eatoo Ltd, 4 Harbour Exchange Square, London, E14 9GE</span></a>
          
          <h4 style="margin-bottom:30px;">FOLLOW US</h4>          
          <a class="Cicon" style="all:unset" href="https://www.instagram.com/eatoo.uk"><span style="font-size: 36px;"><i class="fa fa-instagram"></i></span><span class="fdetails" href="https://www.instagram.com/eatoo.uk">eatoo.uk</span></a>
          <a class="Cicon" style="all:unset" href="https://www.facebook.com/EATOO.UK/"><span style="font-size: 36px; color: #3b5998;"><i class="fab fa-facebook"></i></span><span class="fdetails" href="https://www.facebook.com/EATOO.UK/">eatoouk</span></a>
          <a class="Cicon" style="all:unset" href="https://twitter.com/eatoouk"><span style="font-size: 36px; color: #00acee;"><i class="fab fa-twitter"></i></span><span class="fdetails" href="https://twitter.com/eatoouk">@eatoouk</span></a>
          {{ page.content }}
          <br><br>
        </div>
  </div>
      <div class="grid__item large--one-half">
        <div class="form-vertical">
          <span>
            Fill our form below and we will get back to you as soon as possible.
          </span>
          <p></p>
          <p></p>
          {% form 'contact' %}

            {% comment %}
              Successful message
            {% endcomment %}
            {% if form.posted_successfully? %}
              <p class="note form-success">
                {{ 'contact.form.post_success' | t }}
              </p>
            {% endif %}

            {{ form.errors | default_errors }}

            <div class="grid grid--small">
              <div class="grid__item large--one-half">
                <label for="ContactFormName" class="hidden-label">{{ 'contact.form.name' | t }}</label>
                <input type="text" id="ContactFormName" class="input-full" name="contact[name]" placeholder="{{ 'contact.form.name' | t }}" autocapitalize="words" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}">
              </div>

              <div class="grid__item large--one-half">
                <label for="ContactFormEmail" class="hidden-label">{{ 'contact.form.email' | t }}</label>
                <input type="email" id="ContactFormEmail" class="input-full" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}">
              </div>
            </div>

            <label for="ContactFormPhone" class="hidden-label">{{ 'contact.form.phone' | t }}</label>
            <input type="tel" id="ContactFormPhone" class="input-full" name="contact[phone]" placeholder="{{ 'contact.form.phone' | t }}" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}">

            <label for="ContactFormMessage" class="hidden-label">{{ 'contact.form.message' | t }}</label>
            <textarea rows="10" id="ContactFormMessage" class="input-full" name="contact[body]" placeholder="{{ 'contact.form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>

            <input style="font-weight: bold;" type="submit" class="btn right" value="{{ 'contact.form.send' | t }}">

          {% endform %}
        </div>
      </div>
    </div>

  </div>

</div>

<style>
  .main-content {
    margin-top: 80px;
  }
  
  .mtel {
    margin-left: 30px;
  }

  .Cicon {
    margin: 0px 2px -3px 0px !important;
    cursor: pointer;
  }

  .fdetails {
    padding-left: 5px;
    padding-right: 30px;
    cursor: pointer;
  }
  .mbr {
    display: none;
  }

  .details {
    padding-left: 5px;
  }
  .fa.fa-instagram, .fab.fa-facebook,.fab .fa-twitter{
    cursor: pointer;
  }
  .fa.fa-instagram {
    color: transparent;
    background: radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
    background: -webkit-radial-gradient(circle at 30% 107%, #fdf497 0%, #fdf497 5%, #fd5949 45%, #d6249f 60%, #285AEB 90%);
    background-clip: text;
    -webkit-background-clip: text;
  }
  
  @media screen and (max-width: 768px) {
    .main-content {
      margin-top: 100px;
    }

    .mtel {
      margin-left: 0px;
    }

    .mbr {
      display: block;
    }

    .mobile{
      display: none;
  }
</style>